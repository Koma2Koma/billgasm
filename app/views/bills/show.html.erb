
<h1><%= @bill.title %></h1>


<div class='show'>
  <h2><%= @bill.title %></h2>
  <h2>Due: <%= "#{@bill.due_at.strftime("%A")}, #{@bill.due_at.strftime("%B")} #{@bill.due_at.strftime("%e")}, #{@bill.due_at.strftime("%Y")}" %></h2>
  <h2>Amount: $<%= @bill.amount %></h2>
  <%= render 'paid' %>


  <div class='button'><%= button_to 'Edit', edit_user_bill_path(@user, @bill), method: :get %></div>
  <div class='button'><%= button_to 'Delete', user_delete_path(@user, @bill), method: :delete %></div>
  <div class='button'><%= button_to 'Back', user_bills_path(@user), method: :get %></div>


</div>